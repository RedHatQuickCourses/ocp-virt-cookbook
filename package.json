{
  "devDependencies": {
    "@antora/cli": "3.1.3",
    "@antora/site-generator": "3.1.3",
    "http-server": "^14.1.1",
    "watch": "^0.13.0"
  },
  "scripts": {
    "build": "antora --attribute build-date=\"$(date +'%Y-%m-%d %H:%M')\" antora-playbook.yml",
    "watch:adoc": "watch 'pnpm run build' ./modules",
    "serve": "pnpm dlx http-server build/site -c-1"
  }
}
